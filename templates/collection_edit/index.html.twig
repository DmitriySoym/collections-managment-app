{% extends 'base.html.twig' %}

{% block title %}Edit collection{% endblock %}

{% block body %}
    <div class="container pt-5">
        <div class="d-flex justify-content-end gap-3">
            <a href="/collection/info/{{category.getId()}}" class="btn btn-success nav-btn">Back to collection</a>
            <a href="/collection/create" class="btn btn-primary nav-btn">Create collection</a>
        </div>
        
        <h2 class="pb-3 pt-3">Collection owner: <b>{{category.getAuthor.username}}</b></h2>

        <form method="post" class="category__form">
            <div class="collection__title">
                <div class="collection__title-edit">
                    <label>Collection name</label>
                    <input name="collectionnewname" value="{{category.name}}" type="text" placeholder="enter new collection name"/>
                    <label>Collection description</label>
                    <textarea id="collectionnewdescription" name="collectionnewdescription" value="{{category.description}}" type="text"></textarea>
                    <div class="collection__title-btn">
                        <a class="btn btn-danger collection__btn-delete" href="/collection/delete/{{category.getId()}}">Delete <i class="fa-solid fa-trash-can"></i></a>
                        <button class="btn btn-success" type="submit"><i class="fa-solid fa-check"></i></button>
                        <a href="/collection/info/{{category.getId()}}" class="btn btn-danger cancel-edit"><i class="fa-solid fa-xmark"></i></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        const textarea = document.getElementById("collectionnewdescription").innerText = '{{category.description}}';
    </script>
{% endblock %}
