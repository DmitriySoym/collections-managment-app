{% extends 'base.html.twig' %}

{% block title %}Create collection{% endblock %}

{% block body %}
    <div class="container pt-5">
        <div class="d-flex justify-content-end">
            <a href="/collections" class="btn btn-success nav-btn">Back to categories</a>
        </div>
        
        <h2>You can {{ action }} here.</h2>

        <div class="m-0 m-auto pt-5">
            {{ form_start(form, { 'attr' : { 'class': 'create__form' } }) }}
                {{ form_errors(form) }}

                <label>New category</label>
                {{ form_row(form.name) }}
                <button type="submit" class="btn btn-lg btn-primary" id="btn-create-category">Create</button>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
