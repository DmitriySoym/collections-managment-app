{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container pt-5">
    {% if username == 'Guest' %}
        <div class="d-flex justify-content-end gap-3">
            <a href="/" class="btn btn-success nav-btn">back to main</a>
            <a href="/collections/create" class="btn btn-primary nav-btn">Create category</a>
        </div>
    {% else %}
        <div class="d-flex justify-content-end gap-3">
            <a href="/" class="btn btn-success nav-btn">back to main</a>
            <a href="/collections/create" class="btn btn-primary nav-btn">Create collection</a>
            <a class="btn btn-danger nav-btn" href="/logout">logout</a>
        </div>
    {%  endif %}
    <h2 class="collections__title">Hello {{ username }}!</h2>
    <p class="collections__text">Here you can see collections, wich you can use to create your own items for this collections:</p>
    <ul class="collections">
        {% for collection in categories %}
            <li class="collections__item"><a href="collections/edit/{{collection.id}}">{{collection.name}}</a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
