{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container pt-5">
    <div class="d-flex justify-content-end flex-wrap gap-3">
        <form class="d-flex" method="get">
            <input class="form-control me-2" type="search" name="searchfor" placeholder="Search" aria-label="Search" value="{{searchfor}}"/>
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <a href="/" class="btn btn-success nav-btn">Main page</a>
        <a href="/user/managment" class="btn btn-success nav-btn">Users</a>
        {% if username == 'Guest' %}
            <a href="/login" class="btn btn-success nav-btn"><span class="desctop__btn">Sign in </span><i class="fa-solid fa-right-to-bracket"></i></a>
            <a href="/register" class="btn btn-primary nav-btn"><span class="desctop__btn">Sign up</span> <i class="fa-solid fa-user-plus"></i></a>
        {% else %}
            <a href="/collection/create" class="btn btn-primary nav-btn">Create collection</a>
        {% endif %}
    </div>
    <p class="collections__text">Here you can see collections list.</p>
    {% if searchfor != '' %}
        <p class="collections__text">Search result for <b>"{{searchfor}}"</b></p>
    {% endif %}
        <div class="collections">
            <ul class="row">
                {% for collection in categories %}
                    <li class="col-xl-6 collections__item">
                        <div class="card gap-3 p-1">
                            <a href="/collection/info/{{collection.id}}">{{collection.name}}</a>
                            {% if collection.description %}
                                <p>{{collection.description}}</p>
                            {% else %}
                                <p>No collection description yet</p>
                            {% endif %}
                            <p class="collections__item-owner">owner: <b>{{collection.getAuthor.username}}</b></p>
                            <p class="collections__item-owner">category: <b>{{collection.getCatygoryType.name}}</b></p>
                            {% if collection.getUpdated %}
                                <p class="collections__item-owner">updated: <i>{{collection.updated|date('d M Y H:i:s')}}</i></p>
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>

    <nav aria-label="Page navigation example" class="app-pagination">
        <ul class="pagination">
            {% if searchfor == '' and categoryAmount > 0 %}
                {% for i in 1..categoryAmount %}
                    <li class="page-item"><a class="page-link" href="/collections/{{i}}">{{i}}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </nav>
</div>
{% endblock %}
