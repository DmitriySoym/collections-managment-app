{% extends 'base.html.twig' %}

{% block title %}Collections managment app{% endblock %}

{% block header %}
    <div class="d-flex justify-content-end flex-wrap gap-3">
        <a href="/collections/1" class="btn btn-success nav-btn">{{'nav.open_collections'|trans}}</a>
        <a href="/user/managment" class="btn btn-success nav-btn">{{'nav.users'|trans}}</a>
    {% if app.user == '' %}
        <a href="/login" class="btn btn-success nav-btn"><span class="desctop__btn">{{'nav.sign_in'|trans}} </span><i class="fa-solid fa-right-to-bracket"></i></a>
        <a href="/register" class="btn btn-primary nav-btn"><span class="desctop__btn">{{'nav.sign_up'|trans}}</span> <i class="fa-solid fa-user-plus"></i></a>
    {% endif %}
    </div>
{% endblock %}

{% block body %}
    <div class="container main pt-5">
        <h1 class="text-center">{{'title.main_page'|trans}}</h1>
    </div>
{% endblock %}
