{% extends 'base.html.twig' %}

{% block title %}Create item in collection{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-end">
            <a href="/collection/edit/{{id}}" class="btn btn-success nav-btn">Back to collection</a>
        </div>

        <h1>Item create for collection</h1>
        {{ form_start(form, { 'attr' : { 'class': 'category__form' } }) }}
            {{ form_errors(form) }}
            
            <label>New collection item</label>
            {{ form_row(form.name, { 'attr' : { 'placeholder': 'name' } }) }}
            {{ form_row(form.description, { 'attr' : { 'placeholder': 'description' } }) }}

            {# <div
                data-index="{{ form.customItemAttributes|length > 0 ? form.customItemAttributes|last.vars.name + 1 : 0 }}"
                data-prototype="{{ form_widget(form.customItemAttributes.vars.prototype)|e('html_attr') }}"
                id="custom-attributes-wrapper"
            >
                {% for customItemAttribute in form.customItemAttributes %}
                    <div clas="form__custom-item">
                        {{form_row(customItemAttribute)}}
                    </div>
                {% endfor %}
            </div> #}
            <a id="add-custom-attribute" class="btn btn-primary" href="#">Add attribute <i class="fa-solid fa-plus"></i></a>
            {{ form_rest(form) }}
            <button type="submit" class="btn btn-lg btn-primary" id="btn-create-category-item">Create</button>
        {{ form_end(form) }}

        
    </div>
{% endblock %}