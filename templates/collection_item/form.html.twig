{% extends 'base.html.twig' %}

{% block title %}New collection item{% endblock %}

{% block header %}
    <div class="d-flex justify-content-end gap-3">
        <a href="{{ path('app_category_info', {id: id}) }}" class="btn btn-success nav-btn">{{'collection.backToCollection'|trans}}</a>
    </div>
{% endblock %}

{% block body %}
    <div class="container pt-5 flex-auto">

        <h1>{{'createCollectionItem.newCollectionItem'|trans({'%name%': category.name})}}</h1>
        {{ form_start(form, { 'attr' : { 'class': 'category__form' } }) }}
            {{ form_errors(form) }}
            
            <label>{{'createCollectionItem.newItem'|trans}}</label>
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}

            {{ form_rest(form) }}
            <button type="submit" class="btn btn-primary" id="btn-create-category-item" formnovalidate>{{'createCollection.create'|trans}}</button>
        {{ form_end(form) }}

    </div>
{% endblock %}