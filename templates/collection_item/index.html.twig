{% extends 'base.html.twig' %}

{% block title %}Item Collection{% endblock %}

{% block header %}
    <div class="d-flex justify-content-end gap-3">
        <a href="{{ path('app_category_info', {id: category.getId()}) }}" class="btn btn-success nav-btn">{{'collection.backToCollection'|trans}}</a>
    </div>
{% endblock %}

{% block body %}
    <div class="container pt-5">
        <h3>{{'itemCollection.collectionItemName'|trans({'%name%': itemCollection.name})}} </h3>

        <div class="category__form mt-4">
                <div class="collection__title">
                    <h3>{{ itemCollection.name }}</h3>
                </div>
                {% if app.user %}
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_collection_edit_item', {id: category.getId(), itemId: itemCollection.id}) }}" class="btn btn-success">{{'collection.edit'|trans}} <i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="btn btn-danger collection__btn-delete" href="{{ path('app_collection_item_delete', {id: category.getId(), itemId: itemCollection.id}) }}">{{'createCollection.deleteCollection'|trans}} <i class="fa-solid fa-trash-can"></i></a>
                    </div>
                {% endif %}
            </div>
            
            <ul>
                {# {% for item in customAttributes %}
                    <li>
                        <span>{{item.attribute.name}}</span>
                        <span>{{item.value}}</span>
                    </li>
                {% endfor %} #}
            </ul>
        <div class="comments">
            {% block comments %}
                {{ include('collection_item/comments/list.html.twig') }}
                {{ include('collection_item/comments/form.html.twig') }}
            {% endblock %}
        </div>
    </div>
{% endblock %}
