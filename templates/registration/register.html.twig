{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block header %}
    <div class="d-flex justify-content-end gap-3">
        <a class="btn btn-success nav-btn" href="{{ path('app_login') }}"><span class="desctop__btn">{{'nav.signIn'|trans}} </span><i class="fa-solid fa-right-to-bracket"></i></a>
        <a class="btn btn-success nav-btn" href="{{ path('app_main') }}">{{'nav.backMainPage'|trans}}</a>
    </div>
{% endblock %}

{% block body %}
    <div class="container login sign-up">
        <div class="container pt-5 col-md-4 login__form">
            <h2>{{'register.register'|trans}}</h2>
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}
                <label for="registration_form_username">{{'login.username'|trans}}</label>
                {{ form_row(registrationForm.username, {'attr' : {'class' : 'form-control mb-3'} }) }}
                {{ form_row(registrationForm.email, {'attr' : {'class' : 'form-control mb-3'} }) }}
                <label for="registration_form_plainPassword">{{'login.password'|trans}}</label>
                {{ form_row(registrationForm.plainPassword, {
                    'attr' : {'class' : 'form-control mb-3'} 
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <button type="submit" class="btn btn-primary" formnovalidate>Register</button>
            {{ form_end(registrationForm) }}
        
        </div>
    </div>
{% endblock %}
